{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Debug Build",
            "command": "mingw32-make -f SDL2 debug_build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "Debug Build and Run",
            "command": "start cmd /c \"mingw32-make -f SDL2 debug_build && cls && bin\\main-d.exe && echo. & echo. & echo. & pause\"",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Release Build and Run",
            "command": "mingw32-make -f SDL2 release_build_and_run",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
}